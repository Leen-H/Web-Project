@using Gambl.Models
@model CourseInfo

<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <style>
            body {
                font-family: Arial, sans-serif;
                padding: 20px;
                background-color: #f8f9fa;
            }
            .btn-danger {
                background-color: #dc3545;
                border: none;
                padding: 10px 20px;
            }
            #detail, #curriculum, #instructor{
                background-color: #ffffff;
                padding: 20px;
                margin-bottom: 30px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
                overflow: hidden;
            }
            .collapsible {
                cursor: pointer;
                padding: 10px;
                border: none;
                text-align: left;
                outline: none;
                font-size: 1.2em;
                width: 100%;
                background-color: #ADD8E6;
                color: white;
                border-radius: 8px;
                margin-bottom: 10px;
            }
            .collapsible:after {
                content: '\002B';
                font-size: 1.2em;
                float: right;
            }
            .collapsible.active:after {
                content: '\00D7';
            }
            ul.list
            {
                list-style-type: none;
                padding-left: 0;
            }
            ul.list li
            {
                position: relative;
                padding-left: 25px;
            }
            ul.list li::before
            {
                content: "\F2C8";
                font-family: "bootstrap-icons";
                position: absolute;
                left: 0;
                top: 0;
            }            
            .content {
                padding: 0 15px;
                max-height: 0;
                overflow: hidden;
                transition: max-height 0.2s ease-out;
                background-color: #f1f1f1;
                border-radius: 8px;
                margin-bottom: 20px;
            }

        </style>
    </head>
    <body>
       
              <div id="detail">
                
                <h2>@Model.CourseName </h2>
                <h5>@Model.CourseExplain</h5>
                <a href="#" class="btn btn-danger">SIGN UP NOW</a>
            </div>

            <div id="curriculum">
                <h5>Curriculum</h5>
               @foreach(var lesson in Model.Lessons)
                {
                    <button class="collapsible">@lesson.LessonName</button>
                    <div class="content">
                        <ul class="list">
                            @foreach(var content in lesson.content)
                            {
                                <li>@content.ContentName</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        
        <div id="instructor" class="text-center">
            <h5>Instructor</h5>

            <img src="" alt="Instructor Photo" class="rounded-circle" style="width:150px;height:150px;">
            <p><strong>@Model.CourseInstructor</strong></p>
        </div>

        <script>
            var coll = document.getElementsByClassName("collapsible");
            for (var i = 0; i < coll.length; i++) {
                coll[i].addEventListener("click", function() {
                    this.classList.toggle("active");
                    var content = this.nextElementSibling;
                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                    } else {
                        content.style.maxHeight = content.scrollHeight + "px";
                    }
                });
            }
        </script>
    </body>
</html>
